generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Member {
  id        BigInt    @id @default(autoincrement())
  name      String?
  email     String?   @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now())
  uid       String    @unique
  gameSave  GameSave?
  rooms     Room[]
}

model Room {
  id          BigInt   @id @default(autoincrement())
  memberId    BigInt
  name        String?
  description String?
  images      Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  items       Item[]
  records     Record[]
  member      Member   @relation(fields: [memberId], references: [id])

  @@index([memberId], map: "Room_memberId_fkey")
}

model Item {
  id        BigInt   @id @default(autoincrement())
  roomId    BigInt
  memberId  BigInt
  name      String?
  images    Json
  sale      Boolean
  price     BigInt
  buyUrl    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  room      Room     @relation(fields: [roomId], references: [id])

  @@index([roomId], map: "Item_roomId_fkey")
}

model Record {
  id        BigInt   @id @default(autoincrement())
  roomId    BigInt
  memberId  BigInt
  text      String?
  images    Json
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  room      Room     @relation(fields: [roomId], references: [id])

  @@index([roomId], map: "Record_roomId_fkey")
}

model GameSave {
  id              BigInt   @id @default(autoincrement())
  memberId        BigInt   @unique
  data            Json
  updatedAt       DateTime @default(now()) @updatedAt
  rankScore       Int      @default(0)
  rankCharacterId String?  @db.VarChar(64)
  rankCharacter   Json?
  tester          Boolean  @default(false)
  gameSessionId   String?  @db.VarChar(64)
  member          Member   @relation(fields: [memberId], references: [id])

  @@index([rankScore])
  @@index([rankScore, updatedAt])
}

model GemTransaction {
  id        BigInt   @id @default(autoincrement())
  memberId  BigInt
  type      String   @db.VarChar(10)
  amount    Int
  source    String   @db.VarChar(50)
  memo      String?  @db.VarChar(200)
  createdAt DateTime @default(now())

  @@index([memberId, createdAt])
  @@index([memberId])
}

model Tip {
  id        BigInt   @id @default(autoincrement())
  category  String   @db.VarChar(50)
  title     String   @db.VarChar(200)
  summary   String?  @db.Text
  keyword   Json?
  content   String   @db.LongText
  thumbnail String?  @db.VarChar(500)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@index([category])
}

model AdminUser {
  id          BigInt   @id @default(autoincrement())
  username    String   @unique @db.VarChar(50)
  password    String   @db.VarChar(255)
  name        String?  @db.VarChar(100)
  permissions Json?    // ["tesla", "baby"] 형태로 카테고리 권한 저장
  isSuper     Boolean  @default(false) // 슈퍼 관리자 (모든 권한)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
}

model Category {
  id        BigInt   @id @default(autoincrement())
  value     String   @unique @db.VarChar(50) // 시스템에서 사용하는 값 (예: tesla, baby)
  label     String   @db.VarChar(100) // 표시 이름 (예: 테슬라, 육아)
  sortOrder Int      @default(0) // 정렬 순서
  isActive  Boolean  @default(true) // 활성화 여부
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@index([sortOrder])
}

model Product {
  id          BigInt   @id @default(autoincrement())
  category    String   @db.VarChar(50) // 카테고리 값 (예: tesla, baby)
  name        String   @db.VarChar(500) // 상품명
  price       String   @db.VarChar(100) // 가격 (예: "42,840원")
  thumbnail   String   @db.VarChar(1000) // 썸네일 URL
  deliverType String?  @db.VarChar(100) // 배송 타입
  link        String   @db.VarChar(1000) // 구매 링크
  sortOrder   Int      @default(0) // 정렬 순서
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt

  @@index([category])
  @@index([category, sortOrder])
}

model Subsidy {
  id             BigInt   @id @default(autoincrement())
  locationName1  String   @db.VarChar(50) // 시도 (예: 서울, 경기)
  locationName2  String   @db.VarChar(100) // 시군구 (예: 서울특별시, 수원시)
  totalCount     Int      @default(0) // 총 보급대수
  recievedCount  Int      @default(0) // 접수대수
  releaseCount   Int      @default(0) // 출고대수
  remainCount    Int      @default(0) // 잔여대수
  etc            String?  @db.Text // 비고
  createdAt      DateTime @default(now())
  updatedAt      DateTime @default(now()) @updatedAt

  @@unique([locationName1, locationName2])
  @@index([locationName1])
}
