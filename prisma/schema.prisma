generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Member {
  id        BigInt    @id @default(autoincrement())
  name      String?
  email     String?   @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now())
  uid       String    @unique
  isDeleted Boolean   @default(false)
  gameSave  GameSave?
  Inquiry   Inquiry[]
  rooms     Room[]
}

model Room {
  id          BigInt    @id @default(autoincrement())
  memberId    BigInt
  name        String?
  description String?
  images      Json
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now())
  category    String    @default("tesla") @db.VarChar(50)
  isLocked    Boolean   @default(false)
  items       Item[]
  records     Record[]
  member      Member    @relation(fields: [memberId], references: [id])
  RoomKey     RoomKey[]

  @@index([memberId], map: "Room_memberId_fkey")
  @@index([category])
}

model Item {
  id          BigInt    @id @default(autoincrement())
  roomId      BigInt
  memberId    BigInt
  name        String?
  images      Json
  sale        Boolean   @default(false)
  price       BigInt    @default(0)
  buyUrl      String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now())
  description String?   @db.Text
  purchasedAt DateTime?
  room        Room      @relation(fields: [roomId], references: [id])

  @@index([roomId], map: "Item_roomId_fkey")
}

model Record {
  id        BigInt   @id @default(autoincrement())
  roomId    BigInt
  memberId  BigInt
  text      String?
  images    Json
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  room      Room     @relation(fields: [roomId], references: [id])

  @@index([roomId], map: "Record_roomId_fkey")
}

model GameSave {
  id              BigInt   @id @default(autoincrement())
  memberId        BigInt   @unique
  data            Json
  updatedAt       DateTime @default(now()) @updatedAt
  rankScore       Int      @default(0)
  rankCharacterId String?  @db.VarChar(64)
  rankCharacter   Json?
  tester          Boolean  @default(false)
  gameSessionId   String?  @db.VarChar(64)
  member          Member   @relation(fields: [memberId], references: [id])

  @@index([rankScore])
  @@index([rankScore, updatedAt])
}

model GemTransaction {
  id        BigInt   @id @default(autoincrement())
  memberId  BigInt
  type      String   @db.VarChar(10)
  amount    Int
  source    String   @db.VarChar(50)
  memo      String?  @db.VarChar(200)
  createdAt DateTime @default(now())

  @@index([memberId, createdAt])
  @@index([memberId])
}

model Tip {
  id           BigInt   @id @default(autoincrement())
  category     String   @db.VarChar(50)
  title        String   @db.VarChar(200)
  summary      String?  @db.Text
  keyword      Json?
  content      String   @db.LongText
  thumbnail    String?  @db.VarChar(500)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now()) @updatedAt
  dislikeCount Int      @default(0)
  likeCount    Int      @default(0)
  aiVerified   Boolean  @default(false)

  @@index([category])
}

model AdminUser {
  id          BigInt   @id @default(autoincrement())
  username    String   @unique @db.VarChar(50)
  password    String   @db.VarChar(255)
  name        String?  @db.VarChar(100)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  isSuper     Boolean  @default(false)
  permissions Json?
}

model Category {
  id        BigInt   @id @default(autoincrement())
  value     String   @unique @db.VarChar(50)
  label     String   @db.VarChar(100)
  sortOrder Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@index([sortOrder])
}

model Product {
  id          BigInt   @id @default(autoincrement())
  category    String   @db.VarChar(50)
  name        String   @db.VarChar(500)
  price       String   @db.VarChar(100)
  thumbnail   String   @db.VarChar(1000)
  deliverType String?  @db.VarChar(100)
  link        String   @db.VarChar(1000)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt

  @@index([category])
  @@index([category, sortOrder])
}

model Subsidy {
  id            BigInt   @id @default(autoincrement())
  locationName1 String   @db.VarChar(50)
  locationName2 String   @db.VarChar(100)
  totalCount    Int      @default(0)
  recievedCount Int      @default(0)
  releaseCount  Int      @default(0)
  remainCount   Int      @default(0)
  etc           String?  @db.Text
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now()) @updatedAt

  @@unique([locationName1, locationName2])
  @@index([locationName1])
}

model News {
  id           BigInt    @id @default(autoincrement())
  category     String    @db.VarChar(50)
  source       String    @db.VarChar(200)
  title        String    @unique @db.VarChar(500)
  link         String    @db.VarChar(1000)
  thumbnail    String?   @db.VarChar(1000)
  description  String?   @db.Text
  publishedAt  DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @default(now()) @updatedAt
  dislikeCount Int       @default(0)
  likeCount    Int       @default(0)
  aiVerified   Boolean   @default(false)

  @@index([category])
  @@index([category, publishedAt])
  @@index([publishedAt])
}

model Inquiry {
  id        BigInt   @id @default(autoincrement())
  memberId  BigInt
  title     String   @db.VarChar(200)
  content   String   @db.Text
  answer    String?  @db.Text
  status    String   @default("pending") @db.VarChar(20)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  Member    Member   @relation(fields: [memberId], references: [id])

  @@index([memberId])
}

model RoomKey {
  id                  BigInt                @id @default(autoincrement())
  roomId              BigInt
  code                String                @unique @db.VarChar(20)
  createdAt           DateTime              @default(now())
  Room                Room                  @relation(fields: [roomId], references: [id], onDelete: Cascade)
  RoomKeyRegistration RoomKeyRegistration[]

  @@index([roomId])
}

model CommunityPost {
  id          BigInt    @id @default(autoincrement())
  category    String    @db.VarChar(50)
  source      String    @db.VarChar(50)
  title       String    @db.VarChar(500)
  content     String?   @db.Text
  url         String    @unique @db.VarChar(500)
  views       Int       @default(0)
  likes       Int       @default(0)
  comments    Int       @default(0)
  hotScore    Float     @default(0)
  imageUrl    String?   @db.VarChar(1000)
  publishedAt DateTime?
  crawledAt   DateTime  @default(now())
  aiVerified  Boolean   @default(false)
  isActive    Boolean   @default(true)

  @@index([category])
  @@index([hotScore(sort: Desc)])
  @@index([source])
  @@index([crawledAt])
}

model RoomKeyRegistration {
  id        BigInt   @id @default(autoincrement())
  roomKeyId BigInt
  memberId  BigInt
  createdAt DateTime @default(now())
  RoomKey   RoomKey  @relation(fields: [roomKeyId], references: [id], onDelete: Cascade)

  @@unique([roomKeyId, memberId])
  @@index([memberId])
}
